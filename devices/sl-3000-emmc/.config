# 目标平台（司络 SL-3000，MT7981B 架构）
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000=y

# 基础系统
CONFIG_PACKAGE_luci=y                         # LuCI Web 管理界面
CONFIG_PACKAGE_luci-ssl=y                     # 支持 HTTPS 登录
CONFIG_PACKAGE_luci-app-opkg=y                # 软件包管理器界面
CONFIG_PACKAGE_luci-app-attendedsysupgrade=y # 在线升级支持

# 中文语言包（基础界面翻译）
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# 性能优化（建议编译时集成）
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_PACKAGE_kmod-shortcut-fe=y
CONFIG_PACKAGE_kmod-fast-classifier=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-nat=y

# Docker 所需内核模块（可后装 Docker 本体）
CONFIG_PACKAGE_kmod-veth=y
CONFIG_PACKAGE_kmod-br-netfilter=y
